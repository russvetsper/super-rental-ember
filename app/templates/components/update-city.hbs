{{#if updateCityForm}}
  <h4>Update {{city.city}}'s {{city.country}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="city">City</label>
        {{input value=city id="city" placeholder=city.city}}
      </div>

      <div class="form-group">
        <label for="type">Country</label>
        {{input value=country id="country" placeholder=city.country}}
      </div>

      <button {{action 'update' city}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateCityForm'}}>Update</button>
{{/if}}
